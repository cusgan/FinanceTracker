<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="30dp"
    app:contentPadding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNotifTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Notification:"
                android:textColor="@color/black"
                android:textSize="20sp" />

<!--            <TextView-->
<!--                android:id="@+id/tvNotifDate"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginHorizontal="8dp"-->
<!--                android:fontFamily="@font/inter_medium"-->
<!--                android:text="05/29/24 12:00PM" />-->
        </LinearLayout>

        <TextView
            android:id="@+id/tvNotifBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="This is the notification body that contains the details of the notification."
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDismissNotif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/deep_green"
            android:fontFamily="@font/inter_bold"
            android:text="Dismiss"
            android:textSize="12sp"
            app:cornerRadius="180dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>